{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "program": "${workspaceFolder}/out/server.js",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/out/**",
                "!**/node_modules/**"
            ],
            "cwd": "${workspaceFolder}/out"
        }
    ]
}